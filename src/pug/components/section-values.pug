mixin cardValue(title, text)
  .slide-value 
    .slide-value__titles
      h3.slide-value__title Define your future 
      h4.slide-value__subtitle= title
    .slide-value__text
      p= text

section.section.section-values
  .scroll-progress
  .container
    h2.section-values__title Our values stand the test of time
    .slider-values.swiper(data-scrollspy="animate__fadeInUp")
      .swiper-wrapper
        .swiper-slide
          +cardValue('by caring', 'We have a genuine passion for our work and our teams.')
        .swiper-slide
          +cardValue('being ambitious', 'We donâ€™t settle for good enough')
        .swiper-slide
          +cardValue('being responsible', 'We always question our actions and their outcomes')
        .swiper-slide
          +cardValue('being empowered', 'We make sure everyone has a valued voice')
        .swiper-slide
          +cardValue('being straightforward', 'We cut down the jargon and make things easier')
